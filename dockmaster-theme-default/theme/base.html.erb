<html>
  <head>
    <link href="https://fonts.googleapis.com/css?family=Inconsolata|Source+Sans+Pro:400,700" rel="stylesheet">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/highlight.js/9.9.0/styles/atom-one-dark.min.css">

    <script src="//cdnjs.cloudflare.com/ajax/libs/highlight.js/8.9.1/highlight.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.1.1.js" type="text/javascript"></script>

    <link rel="stylesheet" type="text/css" href="/css/site.css">

    <script src="/js/site.js"></script>
    <script>
      hljs.initHighlightingOnLoad();
    </script>
    <title><%= Dockmaster::CONFIG[:title] %></title>
  </head>
  <body>
        <header class="header">
            <a href="/"><img class="header-logo" src="/assets/<%= @theme_helper.site_logo %>" alt="<%= Dockmaster::CONFIG[:title] %> Logo" /></a>
            <% unless Dockmaster::CONFIG[:source_repo].nil? || Dockmaster::CONFIG[:source_repo].empty? %>
            <a href="<%= Dockmaster::CONFIG[:source_repo] %>" target="_blank" class="header-source-link">View Source</a>
            <% end %>
        </header>
        <div>
          <div id="left-column">
            <div id="lc-list-header">
              <span id="lc-list-header-text">CONTENTS</span>
            </div>
            <div id="lc-list">
              <% for store in @base_helper.list_all_stores %>
                <a class="lc-list-item" href="/<%= store.path %>.html"><%= @theme_helper.format_rb_string(store.rb_string) %></a>
              <% end %>
            </div>
            <div id="lc-list-footer"></div>

            <% unless @store.nil? || @store.type == :none %>
              <% unless @base_helper.method_names.empty? %>
                <div id="lc-list-header">
                  <span id="lc-list-header-text"><%= @store.rb_string.upcase %> METHODS</span>
                </div>
                <div id="lc-list">
                  <% @base_helper.method_names.each do |name| %>
                    <a class="lc-list-item" href="#method_<%= name %>">.<%= name %></a>
                  <% end %>
                </div>
                <div id="lc-list-footer"></div>
              <% end %>

              <% unless @base_helper.field_names.empty? %>
                <div id="lc-list-header">
                  <span id="lc-list-header-text"><%= @store.rb_string.upcase %> FIELDS</span>
                </div>
                <div id="lc-list">
                  <% @base_helper.field_names.each do |name| %>
                    <a class="lc-list-item" href="#field_<%= name %>">::<%= name %></a>
                  <% end %>
                </div>
                <div id="lc-list-footer"></div>
              <% end %>
            <% end %>
          </div>
          <div id="content">
              <%= render %>
          </div>
        </div>
        <div id="footer">
            <div id="generated-by">Generated by
                <a id="generated-by-link" href="https://github.com/chrisblutz/dockmaster">Dockmaster</a>
            </div>
        </div>
  </body>
</html>
