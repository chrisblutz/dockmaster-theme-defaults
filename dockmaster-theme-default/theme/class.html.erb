      <a name="static_method_<%= name %>" class="page-subheader"><%= name %></a>
      <span class="subheader-type-id">(METHOD)</span>
    </div>
    <hr />

    <% if @data.private %>
      <div class="warning warning-red">This method has been marked <code>private</code>.</div>
    <% end %>
    <% if @data.docs[:api] == :private %>
      <div class="warning warning-yellow">This method has been marked <code>private</code> in the API.</div>
    <% end %>

