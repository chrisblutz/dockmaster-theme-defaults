          <tr>
            <td class="params-column1"><code class="code-background"><%= param %></code></td>
            <td class="params-column2"><%= desc %></td>
          </tr>
        <% end %>
      </table>
      <div class="data-footer"></div>
    <% end %>
    <% unless @docs[:return].nil? || @docs[:return].empty? %>
