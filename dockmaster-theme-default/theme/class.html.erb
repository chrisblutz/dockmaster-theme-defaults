<span id="page-header"><%= @theme_helper.format_rb_string(store.rb_string) %></span>
<span id="page-type-id">(CLASS)</span>
<hr />
<% @docs = @store.docs %>
<% unless @docs.description.nil? || @docs.description.empty? %>
  <p class="docs-description"><%= @docs.description %></p>
<% end %>
<% unless @docs[:author].nil? || @docs[:author].empty? %>
  <p class="data-header">AUTHOR</p>
  <p class="data-description"><%= @docs[:author]%> </p>
<% end %>

<% unless @base_helper.names(:constant).empty? %>
  <div class="page-section-header">Constants</div>

  <% for name in @base_helper.names(:constant) %>
    <% @data = @store.data_type(:constant)[name] %>
    <% @docs = @data.docs %>
    <div class="subheader-wrapper">
      <a name="constant_<%= name %>" class="page-subheader"><%= name %></a>
      <span class="subheader-type-id">(CONSTANT)</span>
    </div>
    <hr />

    <% if @data.private %>
      <div class="warning warning-red">This constant has been marked <code>private</code>.</div>
    <% end %>
    <% if @data.docs[:api] == :private %>
      <div class="warning warning-yellow">This constant has been marked <code>private</code> in the API.</div>
    <% end %>

    <% unless @docs.description.nil? || @docs.description.empty? %>
      <p class="docs-description"><%= @docs.description %></p>
    <% end %>
    <div class="toggle">
      <span class="toggle-name">SHOW SOURCE</span>
    </div>
    <div class="details">
      <pre><code class="lang-ruby">
<%= escape_html(@base_helper.source(:constant, name)) %>
      </code></pre>
    </div>
  <% end %>
<% end %>


<% unless @base_helper.names(:static_method).empty? %>
